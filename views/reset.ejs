<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/styles/style.css" />
    <title>Reset Password</title>
  </head>
  <body>
    <div class="container" style="margin-top: 40px">
      <div class="row">
        <div class="col-sm-12">
          <div class="horizontal-container">
            <div class="horizontal-form-box">
              <div class="horizontal-info-container">
                <div class="text-center">
                  <img
                    src="https://static.stayjapan.com/assets/top/icon/values-7dd5c8966d7a6bf57dc4bcd11b2156e82a4fd0da94a26aecb560b6949efad2be.svg"
                  />
                  <p class="horizontal-heading">Reset your password</p>
                </div>
                <p class="horizontal-subtitle">
                  <li>At least 1 Uppercase</li>
                  <li>At least 1 Lowercase</li>
                  <li>At least 1 Number</li>
                  <li>At least 1 Symbol</li>
                  <li>Symbols : !@#$%^&*_=+-</li>
                  <li>Min 8 chars and Max 12 chars</li>
                </p>
              </div>
              <form
                class="horizontal-form"
                method="post"
                action="/user/password/reset"
                enctype="application/x-www-form-urlencoded"
              >
                <div class="o3-form-group">
                  <label for="new_password">New password</label>
                  <input
                    type="password"
                    class="o3-form-control o3-input-lg"
                    name="password"
                    id="new_password"
                    pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*[0-9])(?=.*[!@#$%^&*_=+-]).{8,12}$"
                    required
                  />
                </div>
                <div class="o3-form-group">
                  <label for="confirm_password">Confirm new password</label>
                  <input
                    type="password"
                    class="o3-form-control o3-input-lg"
                    id="confirm_password"
                    name="confirm_password"
                    pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*[0-9])(?=.*[!@#$%^&*_=+-]).{8,12}$"
                    required
                  />
                  <input type="text" id="token" name="token" hidden />
                </div>
                <button class="o3-btn o3-btn-primary o3-btn-block">
                  Set new password
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
    <script>
      const params = new URLSearchParams(window.location.search)
      const token = params.get('token')
      // get input element
      console.log(token)
      const inputElement = document.getElementById('token')
      inputElement.value = token
    </script>
  </body>
</html>
